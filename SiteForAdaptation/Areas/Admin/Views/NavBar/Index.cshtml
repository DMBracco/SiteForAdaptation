@model IEnumerable<SiteForAdaptation.Data.Entities.NavBar>
@{
    ViewData["Title"] = "Навигация";
}

<div class="container-fluid pb-3">
    <section class="content">

      <!-- Default box -->
      <div class="card card-success">
        <div class="card-header">
          <h3 class="card-title">Данные</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
          </div>
        </div>
        <div class="card-body p-0" style="display: block;">
          <table class="table table-striped projects">
              <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserTypeTittle)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserTypeTittle)
                    </td>
                    <td class="project-actions text-right">
                        <a asp-action="Edit" class="btn btn-info btn-sm" asp-route-editId="@item.Id">
                            <i class="fas fa-pencil-alt"></i>
                            Изменить
                        </a>
                    </td>
                </tr>
        }
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
</div>