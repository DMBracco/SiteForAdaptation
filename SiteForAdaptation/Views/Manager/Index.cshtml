    <section class="header">
		<div class="content">
			<div class="menu_flex">
				<div>
					<img src="~/img/logo.png">
				</div>
				<div>
					<a class="menu scrollto menu_of" href="#toptop" >Выбрать компанию</a>
					<a class="menu scrollto menu1" >Карта историй</a>
					<a class="menu scrollto menu2" >Задачи руководителя</a>
