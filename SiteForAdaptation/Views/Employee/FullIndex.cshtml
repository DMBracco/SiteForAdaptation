<div class="content" id="bg_white"><p class="zag_sec2">ПЛАН АДАПТАЦИИ</p></div>

<section class="otvety">
	<div class="content">
		<div class="bg_white">
			<p class="wh_zag">@Model.userTaskTittle</p>
			<p class="text_wh_bold">@Model.userTaskSubtittle</p>
			<p class="text_wh" style="margin-bottom: 0px;">@Model.userTaskText <a href="#cont" class="scrollto">«Полезные контакты»</a></p>

			<div class="flex_wh">
				@foreach (var item in Model.userTaskItems){
					<div><div class="ttd"><p>@item.name</p></div></div>
				}
			</div>

			<div class="don">
				<a href="..\..\..\@Model.userTaskFilePath" download><img src="~/img/don.png"></a>
				<a href="..\..\..\@Model.userTaskFilePath" download><p>Скачать задачи руководителя</p></a>
			</div>
		</div>



		<div class="white_slaider">
			<div class="slaid">
				@foreach (var item in Model.userTaskItems){
					<div>
						<p class="sla_zag">@item.tittle</p>

						<div class="l_s_m_t">
							@foreach (var parag in item.paragraphs){
							<div class="dots">
								<p class="dots_zag">@parag.tittle</p>
								<p class="dots_text">@parag.subtittle</p>
							</div>
							<div class="donload">
								@foreach (var file in parag.files){
									<a href="..\..\..\@file.path" download><img src="~/img/don.png">
									<p style="margin-top: 10px;">@file.name</p></a>
								}
								@foreach (var link in parag.links){
									@link.link
									@link.name
									@link.icon
								}
							</div>
							}
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>

<section class="contact">
	<div class="content">
			<div class="blufon" id="cont">
				<p class="contact_zag">ПОЛЕЗНЫЕ КОНТАКТЫ</p>
				<div class="dovn_cont">
						<a class="con_dol_file" href="..\..\..\@Model.contactFilePath" download style=" border: 2px solid #fff; padding: 13px 26px; border-radius: 14px;">
							<img src="img/don2.png">
							<p>Скачать справочник контактов</p>
						</a>
					</div>
					
				@foreach (var item in Model.contactItems){
					<div class="slaid_contact nmg_slaid">
							<div>
								<div class="contact_flex">
									<div class="box">
										<p class="qr">@item.tittle </p>
										<div class="dt"><p>@item.text</p></div>
										<div class="cont_info">
											<p class="name">@item.phoneName</p>
											<p class="phhp">@item.phoneNumber</p>
											<p><a href="mailto:@item.email">@item.email</a></p>
										</div>
									</div>
								</div>
							</div>
					</div>
				}
			</div>
	</div>
	<div class="bg_fon2"></div>
</section>